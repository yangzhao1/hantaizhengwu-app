<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/shape_d">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人信息"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textColor="@color/theme_color"
                android:textSize="?sizemiddle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="法人证件类型"
                    android:textColor="@color/black"
                    />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="法人证件类型号码"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/userzhengjiancode"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:hint="请输入证件类型号码"
                    android:maxLength="18"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="登录密码"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/password1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:hint="6-16个字符,由字母和数字组成"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="确认密码"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:hint="请再输入一次密码"
                    android:textColor="@color/textcolor"
                    android:inputType="textPassword"
                    android:textSize="?sizesmall"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="企业名称"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/qiyename"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:hint="请输入企业名称"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="法人登录账号"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/loginname"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="6-16个字符,首字母英文,支持字母和数字"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="?sizesosmall"
                android:text="备注: 因法人证件号码字符过长，建议使用法人账号进行登录"
                android:textColor="@color/textcolor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法定代表人信息"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/theme_color"
                android:textSize="?sizemiddle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="法定代表人姓名"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="请输入法定代表人姓名"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="身份证号码"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/usercode"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:hint="请输入法定代表人身份号码"
                    android:maxLength="18"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="手机号"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:hint="请输入法定代表人手机号码"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomline_bg"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="注册"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_bgs_theme"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>