<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbarback_right"
            ></include>

        <LinearLayout
            android:id="@+id/searchLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchConetnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:hint="请输入事项名称"
                android:textSize="?sizesmall"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_graybg_theme"/>

            <TextView
                android:id="@+id/searchs"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_bgs_theme"
                android:textColor="@color/white"
                android:text="搜索"/>
        </LinearLayout>

        <include
            layout="@layout/recyclerview_layout"
            ></include>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>