<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/popLin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/shape_bg_theme"
        android:padding="15dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="办理须知"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="?sizebig"
                    android:textColor="@color/theme_color"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="注意：办理该项业务，需具备以下申请条件和准备申请材料，才能进行业务的办理，请您自检是否具备！"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/qianred"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="3dp"
                        android:layout_height="17dp"
                        android:background="@color/theme_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="具备申请条件"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@color/theme_color"
                        android:textSize="?sizemiddle"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_tiaojian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="?sizesmall"
                        android:text="大声道多多多多多多多多多多多多打撒所大所多是打算大撒大声地">

                    </TextView>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="17dp"
                        android:background="@color/theme_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="准备申请材料"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@color/theme_color"
                        android:textSize="?sizemiddle"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview_c"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/iread"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="我已阅读"
                    android:layout_margin="15dp"
                    android:textSize="?sizemiddle"
                    android:textColor="@color/theme_color"
                    android:background="@drawable/shape_bg_theme"
                    android:gravity="center"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>