<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="3dp"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:background="@color/theme_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?sizesmall"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/theme_color"
                android:text="便民服务"/>

            <TextView
                android:id="@+id/moreconven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="?sizesosmall"
                android:text="查看更多"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/express"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/express"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="5dp"
                    android:textSize="?sizesmall"
                    android:text="快递查询"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/livingpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="5dp"
                    android:textSize="?sizesmall"
                    android:text="生活缴费"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/violation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/peccancy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="5dp"
                    android:textSize="?sizesmall"
                    android:text="违章查询"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/trick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/aircraft"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:text="机票查询"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/navigation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textSize="?sizesmall"
                    android:text="地图导航"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>