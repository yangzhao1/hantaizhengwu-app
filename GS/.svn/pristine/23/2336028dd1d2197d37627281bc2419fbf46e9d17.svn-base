<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbarback"
            ></include>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg"
                android:padding="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="11dp"
                        android:text="旧  密  码"
                        android:textColor="@color/black"
                        android:textSize="?sizesmall"
                        />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="?sizesmall"
                        android:hint="请输入旧密码"
                        android:textColorHint="@color/gray"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:layout_toLeftOf="@id/ps_image"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        />

                    <ImageView
                        android:id="@+id/ps_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/nosee_ps_gray"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"

                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="11dp"
                        android:gravity="center_vertical"
                        android:text="新  密  码"
                        android:textColor="@color/black"
                        android:textSize="?sizesmall"
                        />

                    <EditText
                        android:id="@+id/newpassword1"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="?sizesmall"
                        android:hint="6-16个字符,必须由字母和数字组成"
                        android:padding="10dp"
                        android:textColorHint="@color/gray"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/interval"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="11dp"
                        android:gravity="center_vertical"
                        android:text="确认密码"
                        android:textColor="@color/black"
                        android:textSize="?sizesmall"
                        />

                    <EditText
                        android:id="@+id/newpassword2"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="?sizesmall"
                        android:hint="6-16个字符,必须由字母和数字组成"
                        android:inputType="textPassword"
                        android:textColorHint="@color/gray"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical"
                        android:padding="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:text="确认修改"
                    android:textSize="?size"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/shape_bgs_theme"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>