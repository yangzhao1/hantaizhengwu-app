<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <include layout="@layout/toolbar"></include>

            <RelativeLayout
                android:id="@+id/myinfo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/theme_color"
                android:padding="10dp"
                >
                <!--
                      android:background="@color/yb_text"
                -->
                <ImageView
                    android:id="@+id/headImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/user_defalut"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/headImage">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="?sizesmall"
                        android:text="点击登录..."/>

                    <TextView
                        android:id="@+id/loginname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="?sizesosmall"
                        android:textColor="@color/line"
                        android:text=""/>

                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_w"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mythingRel"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/mine_office"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:layout_marginTop="10dp"
                        android:textSize="?sizesmall"
                        android:text="我的办件"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/myevaluateRel"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/eval"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:layout_marginTop="10dp"
                        android:textSize="?sizesmall"
                        android:text="我的评价"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/zixunRel"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/mine_advice"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:layout_marginTop="10dp"
                        android:textSize="?sizesmall"
                        android:text="我的咨询"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mycollectRel"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/house"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:layout_marginTop="10dp"
                        android:textSize="?sizesmall"
                        android:text="我的收藏"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/interval"/>

            <RelativeLayout
                android:id="@+id/tousuRel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/huixin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/info"/>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/tousu"
                    android:textColor="@color/black"
                    android:textSize="?sizesmall"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/huixin"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/interval"/>

            <RelativeLayout
                android:id="@+id/huixinRel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/tousu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/complaint"/>

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="我的回信"
                    android:textColor="@color/black"
                    android:textSize="?sizesmall"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tousu"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/interval"/>

            <RelativeLayout
                android:id="@+id/mysettingRel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/fit"/>

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/setting"
                    android:textColor="@color/black"
                    android:textSize="?sizesmall"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/setting"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>